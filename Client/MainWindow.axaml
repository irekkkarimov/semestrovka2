<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Client.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Title="Client"
        Background="DarkGray">
    <StackPanel>
        <Grid
            x:Name="Root"
            Height="800"
            ColumnDefinitions="Auto, *, Auto">
            <Grid
                x:Name="UserListGrid"
                Width="200"
                Margin="10, 10, 0, 0"
                Grid.Column="0"
                IsVisible="False">
                <ListBox
                    x:Name="UserList"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    IsVisible="False">
                </ListBox>
                <Button
                    Margin="0, 5, 0 0"
                    Click="StartGame">
                    Start the game
                </Button>
            </Grid>
            <Grid
                x:Name="UserEnterContainer"
                Width="200"
                VerticalAlignment="Center"
                Grid.Column="1">
                <Border
                    BorderBrush="Aqua"
                    BorderThickness="2"
                    CornerRadius="5">
                    <StackPanel
                        Margin="5, 5, 5, 5">
                        <Label
                            x:Name="WelcomeTextBlock"
                            Margin="0, 0, 0, 5"
                            HorizontalAlignment="Center">
                            Hello world!
                        </Label>
                        <TextBox
                            x:Name="EnterName"
                            Margin="0, 0, 0, 5"
                            Watermark="Write your username" />
                        <Button
                            x:Name="SubmitNameButton"
                            HorizontalAlignment="Stretch"
                            Click="SendUserName">
                            Enter the game
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid
                x:Name="GameContainer"
                Width="1200"
                HorizontalAlignment="Center"
                Grid.Column="1"
                IsVisible="False">
                <StackPanel>
                    <Border
                        x:Name="Slot1"
                        Width="500"
                        Margin="0, 40, 0, 0"
                        HorizontalAlignment="Center"
                        BorderBrush="Aqua"
                        BorderThickness="2"
                        IsVisible="False">
                        <StackPanel
                            HorizontalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center">Игрок номер 1</TextBlock>
                            <Border
                                MinWidth="250"
                                MaxWidth="400"
                                MinHeight="70"
                                HorizontalAlignment="Center"
                                Margin="0, 0, 0, 20"
                                BorderBrush="Beige"
                                BorderThickness="2">
                                <StackPanel
                                    HorizontalAlignment="Center">
                                    <ListBox
                                        ItemsSource="{Binding Players[0].CardsInPlay}"
                                        Background="Transparent">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    Width="70"
                                                    Height="60">
                                                    <TextBlock Text="{Binding Type}" />
                                                    <TextBlock Text="{Binding Name}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    <DockPanel
                        HorizontalAlignment="Stretch"
                        Margin="0, 100, 0 0">
                        <Border
                            x:Name="Slot2"
                            HorizontalAlignment="Left"
                            BorderBrush="Aqua"
                            BorderThickness="2"
                            IsVisible="False">
                            <StackPanel
                                MinWidth="250"
                                MaxWidth="400"
                                MinHeight="70">
                                <ListBox
                                    ItemsSource="{Binding Players[1].CardsInPlay}"
                                    Background="Transparent">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Width="70"
                                                Height="60"
                                                Margin="5, 5, 5, 5">
                                                <TextBlock Text="{Binding Type}" />
                                                <TextBlock Text="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                        <Border
                            x:Name="Slot3"
                            HorizontalAlignment="Right"
                            BorderBrush="Aqua"
                            BorderThickness="2" 
                            IsVisible="False">
                            <StackPanel
                                MinWidth="250"
                                MaxWidth="400"
                                MinHeight="70">
                                <ListBox
                                    ItemsSource="{Binding Players[2].CardsInPlay}"
                                    Background="Transparent">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Width="70"
                                                Height="60">
                                                <TextBlock Text="{Binding Type}" />
                                                <TextBlock Text="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </DockPanel>
                    <Border
                        Width="800"
                        HorizontalAlignment="Center"
                        Margin="0, 100, 0 0"
                        BorderBrush="Aqua"
                        BorderThickness="2">
                        <StackPanel
                            x:Name="SlotMain"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="10, 10, 10, 10">
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="0, 0, 5, 0"
                                    Click="AddCardToHand">
                                    Add card to hand
                                </Button>
                                <Button
                                    Click="MoveFromHandToPlay">
                                    Move from hand to play
                                </Button>
                            </StackPanel>
                            <Label HorizontalAlignment="Center">Cards in play</Label>
                            <Border
                                MinWidth="250"
                                MaxWidth="400"
                                MinHeight="70"
                                Margin="0, 0, 0, 20"
                                BorderBrush="Beige"
                                BorderThickness="2">
                                <StackPanel
                                    x:Name="CardsInPlay">
                                    <ListBox
                                        ItemsSource="{Binding CardsInPlay}"
                                        Background="Transparent">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    Width="70"
                                                    Height="60">
                                                    <TextBlock Text="{Binding Type}" />
                                                    <TextBlock Text="{Binding Name}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                            <Label HorizontalAlignment="Center">Cards in hand</Label>
                            <Border
                                BorderBrush="Bisque"
                                BorderThickness="2">
                                <StackPanel
                                    x:Name="CardZone"
                                    MinHeight="100">
                                    <ListBox
                                        ItemsSource="{Binding Cards}"
                                        Background="Transparent">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    Width="70"
                                                    Height="100"
                                                    Margin="0"
                                                    PointerPressed="MakeMove">
                                                    <TextBlock Text="{Binding Type}" />
                                                    <TextBlock Text="{Binding Name}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- <StackPanel> -->
                <!--     <TextBlock -->
                <!--         x:Name="Counter" -->
                <!--         HorizontalAlignment="Center" -->
                <!--         Margin="0, 0, 0, 5">Not started</TextBlock> -->
                <!--     <Button -->
                <!--         x:Name="IncrementCounter" -->
                <!--         HorizontalAlignment="Center" -->
                <!--         Click="CounterIncrementButton">Increment</Button> -->
                <!-- </StackPanel> -->
            </Grid>
            <Grid
                x:Name="UserNameContainer"
                Width="150"
                Height="100"
                VerticalAlignment="Top"
                Grid.Column="2"
                IsVisible="False">
                <StackPanel>
                    <Border
                    Margin="0, 10, 10, 10"
                    BorderBrush="Aquamarine"
                    BorderThickness="2"
                    CornerRadius="5">
                    <StackPanel>
                        <Label Margin="5, 0, 0, 0"
                               Padding="0"
                               HorizontalAlignment="Left"
                               FontSize="18"
                               FontWeight="Bold">
                            Your name:
                        </Label>
                        <TextBlock
                            x:Name="NameTextBlock"
                            Margin="5, 0, 0, 0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            FontSize="20">
                        </TextBlock>
                        <Button
                            Margin="0, 0, 0, 5"
                            HorizontalAlignment="Center"
                            Click="DisconnectButton">
                            Leave
                        </Button>
                    </StackPanel>
                </Border>
                <Border
                    x:Name="Rules"
                    HorizontalAlignment="Center"
                    BorderBrush="Aqua"
                    BorderThickness="2"
                    IsVisible="False">
                    <StackPanel
                        Width="100"
                        Height="70"
                        Margin="2, 2, 2, 2">
                        <Label
                            Margin="0, 0, 0, 5">Current rules:</Label>
                        <TextBlock 
                            x:Name="Rule1"
                            Margin="0, 0, 0, 5">Draw 1</TextBlock>
                        <TextBlock
                            x:Name="Rule2"
                            Margin="0, 0, 0, 5">Play 1</TextBlock>
                        <TextBlock
                            x:Name="Rule3"
                            Margin="0, 0, 0, 5"></TextBlock>
                    </StackPanel>
                </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </StackPanel>
</Window>