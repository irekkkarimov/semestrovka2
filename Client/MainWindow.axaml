<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client.MainWindow"
        Title="Client"
        Background="DarkGray">
    <StackPanel>
        <Grid
            x:Name="Root"
            Height="500"
            ColumnDefinitions="Auto, *, Auto">
            <Grid
                x:Name="UserListGrid"
                Width="150"
                Grid.Column="0"
                IsVisible="False">
                <ListBox
                    x:Name="UserList"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10, 10, 0, 0"
                    IsVisible="False">
                </ListBox>
            </Grid>
            <Grid
                x:Name="UserEnterContainer"
                Width="200"
                VerticalAlignment="Center"
                Grid.Column="1">
                <Border
                    BorderBrush="Aqua"
                    BorderThickness="2"
                    CornerRadius="5">
                    <StackPanel
                        Margin="5, 5, 5, 5">
                        <Label
                            x:Name="WelcomeTextBlock"
                            Margin="0, 0, 0, 5"
                            HorizontalAlignment="Center">
                            Hello world!
                        </Label>
                        <TextBox
                            x:Name="EnterName"
                            Margin="0, 0, 0, 5"
                            Watermark="Write your username" />
                        <Button
                            x:Name="SubmitNameButton"
                            HorizontalAlignment="Stretch"
                            Click="SendUserName">
                            Enter the game
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid
                x:Name="GameContainer"
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="1"
                IsVisible="false">
                <StackPanel>
                    <TextBlock
                        x:Name="Counter"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 5">Not started</TextBlock>
                    <Button
                        x:Name="IncrementCounter"
                        HorizontalAlignment="Center"
                        Click="CounterIncrementButton">Increment</Button>
                </StackPanel>
            </Grid>
            <Grid
                x:Name="UserNameContainer"
                Width="150"
                Height="100"
                VerticalAlignment="Top"
                Grid.Column="2"
                IsVisible="False">
                <Border
                    Margin="0, 10, 10, 0"
                    BorderBrush="Aquamarine"
                    BorderThickness="2"
                    CornerRadius="5">
                    <StackPanel>
                        <Label Margin="5, 0, 0, 0"
                               Padding="0"
                               HorizontalAlignment="Left"
                               FontSize="18"
                               FontWeight="Bold">
                            Your name:
                        </Label>
                        <TextBlock
                            x:Name="NameTextBlock"
                            Margin="5, 0, 0, 0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            FontSize="20">
                        </TextBlock>
                        <Button
                            Margin="0, 0, 0, 5"
                            HorizontalAlignment="Center"
                            Click="DisconnectButton">
                            Leave
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </StackPanel>
</Window>